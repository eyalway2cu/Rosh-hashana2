<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<div id="content">
				<div class="inner_wrap">
					<img
						src="_BASEURL.'/site/images/logo-blue.svg'"
						alt="logo"
						id="logo"
						cms:eval="src"
					/>
					<div class="top_container">
						<h1>
							<cms:text constant="header1"/>
						</h1>
						<h2>
							<cms:text constant="header2"/>
						</h2>
					</div>
					<div id="postcard_container">
						<div class="left" data-name="holiday">
							<cms:module
								name="contact_form"
								action="show"
								text_id="postcard"
							/>
						</div>

						<div class="active" data-name="honey and apples">
							<cms:module
								name="contact_form"
								action="show"
								text_id="postcard"
							/>
						</div>

						<div class="right" data-name="pomegranate">
							<cms:module
								name="contact_form"
								action="show"
								text_id="postcard"
							/>
						</div>
					</div>
					<div class="postcard_bottom">
						<label>
							<input type="checkbox"/>
							<span>
								<cms:text constant="donate_text"/>
							</span>
						</label>
						<button type="button">
							<cms:text constant="send_blessing"/>
						</button>
					</div>
					<img
						src="_BASEURL.'/site/images/photo-2.jpg'"
						alt="photo1"
						class="bottom_photos first"
						cms:eval="src"
					/>
					<img
						src="_BASEURL.'/site/images/photo-3.jpg'"
						alt="photo1"
						class="bottom_photos middle"
						cms:eval="src"
					/>
					<img
						src="_BASEURL.'/site/images/photo-1.jpg'"
						alt="photo1"
						class="bottom_photos last"
						cms:eval="src"
					/>
				</div>
			</div>
		</body>
	</html>
</document>
